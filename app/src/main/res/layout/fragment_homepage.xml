<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/gerb"
    tools:context=".ui.homepage.HomepageFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/translateFragmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/translate_fragment_btn"
        android:layout_marginStart="8dp"
        style="@style/homePageButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/listWordFragmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_word_fragment_btn"
        style="@style/homePageButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quizFragmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quiz_fragment_btn"
        style="@style/homePageButton"/>

</LinearLayout>