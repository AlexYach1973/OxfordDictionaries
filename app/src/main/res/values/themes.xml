<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Translator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

        <!--        Цвет точек меню в своем ToolBar-->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <!--        Цвет точек меню в своем ToolBar-->
    <style name="actionOverflowButtonStyle"
        parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/yellow_dark</item>
    </style>


<!--     Стиль для Switch- Чомусь не працює-->
    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/teal_200</item>
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/teal_200</item>
    </style>

<!--    Style Homepage Fragment-->
    <style name="homePageButton">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow_dark</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/yellow_dark</item>
        <item name="backgroundTint">@color/purple_700_transparent</item>
    </style>
</resources>